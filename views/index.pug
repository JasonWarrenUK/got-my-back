extends layout

block content
  header
    h1= title
    p Welcome to #{title}

  hr

  main
    h2 Where & What?
    form(action='/list' method='POST')
      p
        label(for='postcode') Postcode
        input#postcode(type='text' name='postcode')
      p
        label(for='topic') Topic
        input#topic(type='text' name='topic')
      input(type='submit' value='submit')

  hr

  footer
    p
      a(href="/") Start Again
